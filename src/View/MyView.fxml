<?xml version="1.0" encoding="UTF-8"?>

<?import View.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="616.0" prefWidth="800.0" stylesheets="@ViewStyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <top>
      <VBox prefHeight="6.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar id="menuBar">
              <menus>
                <Menu id="fileMenu" text="_File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#loadGame" text="Load" />
                        <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#exitProgram" text="Exit" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Options">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#showProperties" text="Properties" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <left>
      <AnchorPane prefHeight="220.0" prefWidth="93.0" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="15.0" layoutY="72.0" mnemonicParsing="false" onAction="#createGame" prefHeight="23.0" prefWidth="71.0" text="New Maze" />
         </children>
      </AnchorPane>
   </left>
   <padding>
      <Insets top="1.0" />
   </padding>
   <center>
       <Pane BorderPane.alignment="CENTER">
           <children>
               <MazeDisplayer fx:id="mazeDisplayer" height="399.0" imageFileNamePlayer="resources/Images/player.png" imageFileNameWall="resources/Images/wall.png" imageFileGoal="resources/Images/fish.PNG" layoutX="10.0" onKeyPressed="#keyPressed" width="390.0" />
           </children>
           <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
           </padding>
       </Pane>
   </center>
</BorderPane>
