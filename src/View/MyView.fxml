<?xml version="1.0" encoding="UTF-8"?>

<?import View.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" onMouseClicked="#mouseClicked" prefHeight="616.0" prefWidth="800.0" snapToPixel="false" stylesheets="@ViewStyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <top>
      <VBox prefHeight="6.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar id="menuBar">
              <menus>
                <Menu id="fileMenu" text="_File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#loadGame" text="Load" />
                        <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#exitProgram" text="Exit" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Options">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#showProperties" text="Properties" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <left>
      <AnchorPane prefHeight="220.0" prefWidth="93.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane layoutX="16.0" layoutY="21.0" prefHeight="220.0" prefWidth="70.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Button fx:id="newBtn" mnemonicParsing="false" onAction="#getSettings" prefHeight="23.0" prefWidth="111.0" text="New Maze" />
                  <Button fx:id="loadBtn" mnemonicParsing="false" onAction="#loadGame" prefHeight="23.0" prefWidth="145.0" text="Load Maze" GridPane.rowIndex="1" />
                  <Button fx:id="saveBtn" disable="true" mnemonicParsing="false" prefHeight="23.0" prefWidth="145.0" text="Save Maze" GridPane.rowIndex="2" />
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </left>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
              <MazeDisplayer fx:id="mazeDisplayer" height="600.0" imageFileGoal="resources/Images/fish.PNG" imageFileNamePlayer="resources/Images/cat1.png" imageFileNameWall="resources/Images/wall.png" onKeyPressed="#keyPressed" width="691.0" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" right="19.0" top="10.0" />
         </BorderPane.margin>
      </StackPane>
   </center>
   <right>
      <AnchorPane prefHeight="591.0" prefWidth="121.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane layoutY="41.0" />
            <GridPane layoutX="13.0" layoutY="26.0" prefHeight="93.0" prefWidth="96.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <ToggleButton fx:id="playBtn" mnemonicParsing="false" onAction="#mute" prefHeight="25.0" prefWidth="109.0" text="Mute" GridPane.rowIndex="1" />
                  <ToggleButton fx:id="solveBtn" disable="true" mnemonicParsing="false" onAction="#solveMaze" prefHeight="25.0" prefWidth="104.0" text="Show Solution" />
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </right>
</BorderPane>
