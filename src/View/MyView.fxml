<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="616.0" prefWidth="800.0" snapToPixel="false" stylesheets="@ViewStyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <top>
      <VBox prefHeight="6.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar id="menuBar">
              <menus>
                <Menu id="fileMenu" text="_File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#loadGame" text="Load" />
                        <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#exitProgram" text="Exit" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Options">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#showProperties" text="Properties" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <left>
      <AnchorPane prefHeight="220.0" prefWidth="93.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane layoutX="7.0" layoutY="111.0" prefHeight="185.0" prefWidth="79.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Button mnemonicParsing="false" onAction="#getSettings" prefHeight="23.0" prefWidth="111.0" text="New Maze" />
                  <Button mnemonicParsing="false" onAction="#loadGame" prefHeight="23.0" prefWidth="145.0" text="Load Maze" GridPane.rowIndex="1" />
                  <Button mnemonicParsing="false" onAction="#saveGame" prefHeight="23.0" prefWidth="129.0" text="Save Maze" GridPane.rowIndex="2" />
                   <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#solveMaze" text="Solve (DON'T!)" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </left>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
              <MazeDisplayer fx:id="mazeDisplayer" height="600.0" imageFileGoal="resources/Images/fish.PNG" imageFileNamePlayer="resources/Images/cat.png" imageFileNameWall="resources/Images/wall.png" onKeyPressed="#keyPressed" onZoomFinished="#resizeCanvas" width="691.0" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" right="19.0" top="10.0" />
         </BorderPane.margin>
      </StackPane>
   </center>
</BorderPane>
